<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <LinearLayout android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFFFFF"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:background="@color/main_color" />

            <TextView
                android:id="@+id/LoginText"
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginTop="50dp"
                android:text="로그인"
                android:textColor="@android:color/black"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/editTextEmail"
                android:layout_width="280dp"
                android:layout_height="43dp"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="16dp"
                android:background="@color/common_google_signin_btn_text_dark_disabled"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="이메일 입력"
                android:textColor="@android:color/black"
                android:textSize="10sp" />

            <EditText
                android:id="@+id/editTextPassword"
                android:layout_width="280dp"
                android:layout_height="43dp"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="25dp"
                android:background="@color/common_google_signin_btn_text_dark_disabled"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="  비밀번호 입력"
                android:textColor="@android:color/black"
                android:textSize="10sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/checkBox11"
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="70dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:layout_weight="1"
                    android:button="@android:drawable/checkbox_off_background"
                    android:checked="true"
                    android:text=" 아이디 저장"
                    android:textColor="@android:color/black" />

                <CheckBox
                    android:id="@+id/checkBox10"
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="70dp"
                    android:layout_marginBottom="15dp"
                    android:layout_weight="1"
                    android:button="@android:drawable/checkbox_off_background"
                    android:text="  자동 로그인"
                    android:textColor="@android:color/black" />
            </LinearLayout>

        <Button
            android:id="@+id/buttonSignup"
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:background="@drawable/login_btn1"
            android:text="로그인"
            android:textSize="20sp" />

            <LinearLayout
                android:id="@+id/imgicon"
                android:layout_width="match_parent"
                android:layout_height="79dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgViewSignin"
                    android:layout_width="29dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    android:layout_weight="1"
                    app:srcCompat="@android:drawable/ic_secure" />

                <ImageView
                    android:id="@+id/imgViewFindpassword"
                    android:layout_width="30dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    android:layout_weight="1"
                    app:srcCompat="@android:drawable/ic_search_category_default" />

                <ImageView
                    android:id="@+id/imgSignUp_business"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    android:layout_weight="1"
                    android:paddingRight="7dp"
                    app:srcCompat="@android:drawable/ic_input_get" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textViewSignin"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:gravity="center|center_horizontal"
                    android:paddingBottom="50dp"
                    android:text="회원가입"
                    android:textColor="@color/colorPrimaryDark" />

                <TextView
                    android:id="@+id/textViewFindpassword"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:gravity="center|center_horizontal"
                    android:paddingBottom="50dp"
                    android:text="ID/PW 찾기"
                    android:textColor="@color/colorPrimaryDark" />

                <TextView
                    android:id="@+id/signup_business"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:gravity="center|center_horizontal"
                    android:paddingRight="10dp"
                    android:paddingBottom="50dp"
                    android:text="사업자 회원가입"
                    android:textColor="@color/colorPrimaryDark" />
            </LinearLayout>

        </LinearLayout>

</LinearLayout>